---
// ImageComponent.astro
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  src: ImageMetadata;
  alt: string;
  width: number;
  height: number;
  className?: string;
}

const { src, alt, width, height, className = "" } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={`${className} rounded-xl`}
/>
