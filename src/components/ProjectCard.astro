---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "./ui/card";
import ImageComponent from "./ImageComponent.astro";
import type { ImageMetadata } from "astro";

interface Props {
  href: string;
  title: string;
  description: string;
  imageSrc: ImageMetadata;
  imageAlt: string;
}

const { href, title, description, imageSrc, imageAlt } = Astro.props;
---

<a href={href} target="_blank">
  <Card className="h-[380px] hover:bg-gray-500 transition-colors duration-300">
    <CardHeader>
      <CardTitle>{title}</CardTitle>
      <CardDescription>{description}</CardDescription>
    </CardHeader>
    <CardContent className="h-[250px] overflow-hidden">
      <div class="w-full h-full relative">
        <ImageComponent
          src={imageSrc}
          alt={imageAlt}
          width={300}
          height={250}
          className="w-full h-full object-cover"
        />
      </div>
    </CardContent>
  </Card>
</a>
